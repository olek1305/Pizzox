{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-bold mb-6">{{ pizza.name }}</h1>

        <div class="bg-white shadow-md rounded-lg p-6">
            <p class="mb-4">
                <strong>{{ 'pizza.price'|trans }}:</strong> {{ pizza.price }} {{ currency }}
            </p>

            <div class="mb-4">
                <strong>{{ 'pizza.sizes'|trans }}:</strong>
                {% if pizza.size|length > 0 %}
                    <ul class="list-disc pl-6">
                        {% for size in pizza.size %}
                            <li>{{ size }}</li>
                        {% endfor %}
                    </ul>
                {% else %}
                    {{ 'pizza.no_sizes'|trans }}
                {% endif %}
            </div>

            <div class="mb-4">
                <strong>{{ 'pizza.toppings'|trans }}:</strong>
                {% if pizza.toppings|length > 0 %}
                    <ul class="list-disc pl-6">
                        {% for topping in pizza.toppings %}
                            <li>{{ topping }}</li>
                        {% endfor %}
                    </ul>
                {% else %}
                    {{ 'pizza.no_toppings'|trans }}
                {% endif %}
            </div>

            <div class="mb-4">
                <strong>{{ 'pizza.category'|trans }}:</strong>
                {% if pizza.category %}
                    {{ pizza.category.name }}
                {% else %}
                    {{ 'pizza.no_category'|trans }}
                {% endif %}
            </div>

            {% if is_granted('ROLE_ADMIN') %}
                <div class="mt-4">
                    <h3>Create Promotion</h3>
                    <form action="{{ path('promotion_create', {'type': 'pizza', 'itemId': pizza.id}) }}" method="POST">
                        <div class="form-group">
                            <label for="usage_limit">Usage Limit</label>
                            <input type="number" id="usage_limit" name="usage_limit" class="form-control" required min="1">
                        </div>

                        <div class="form-group">
                            <label for="discount_value">Discount Value</label>
                            <input type="number" id="discount_value" name="discount_value" class="form-control" required step="0.01" min="0">
                        </div>

                        <div class="form-group">
                            <label for="discount_type">Discount Type</label>
                            <select id="discount_type" name="discount_type" class="form-control" required>
                                <option value="percentage">Percentage (%)</option>
                                <option value="fixed">Fixed Amount</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="expiry_days">Valid For (days)</label>
                            <input type="number" id="expiry_days" name="expiry_days" class="form-control" required min="1" value="30">
                            <small class="form-text text-muted">Number of days until promotion expires</small>
                        </div>

                        <button type="submit" class="btn btn-primary mt-3">Create Promotion</button>
                    </form>
                </div>
            {% endif %}
        </div>

        <div class="mt-6">
            <a href="{{ path('pizza_edit', {'id': pizza.id}) }}" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
                {{ 'action.edit'|trans }}
            </a>
            <a href="{{ path('pizza_index') }}" class="text-blue-500 hover:underline ml-4">
                {{ 'action.back_to_list'|trans }}
            </a>
        </div>
    </div>
{% endblock %}