{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-bold mb-6">{{ pizza.name }}</h1>

        <div class="bg-white shadow-md rounded-lg p-6">
            <p class="mb-4">
                <strong>{{ 'pizza.price'|trans }}:</strong> {{ pizza.price }} $
            </p>

            <div class="mb-4">
                <strong>{{ 'pizza.sizes'|trans }}:</strong>
                {% if pizza.size|length > 0 %}
                    <ul class="list-disc pl-6">
                        {% for size in pizza.size %}
                            <li>{{ size }}</li>
                        {% endfor %}
                    </ul>
                {% else %}
                    {{ 'pizza.no_sizes'|trans }}
                {% endif %}
            </div>

            <div class="mb-4">
                <strong>{{ 'pizza.toppings'|trans }}:</strong>
                {% if pizza.toppings|length > 0 %}
                    <ul class="list-disc pl-6">
                        {% for topping in pizza.toppings %}
                            <li>{{ topping }}</li>
                        {% endfor %}
                    </ul>
                {% else %}
                    {{ 'pizza.no_toppings'|trans }}
                {% endif %}
            </div>

            <div class="mb-4">
                <strong>{{ 'pizza.category'|trans }}:</strong>
                {% if pizza.category %}
                    {{ pizza.category.name }}
                {% else %}
                    {{ 'pizza.no_category'|trans }}
                {% endif %}
            </div>
        </div>

        <div class="mt-6">
            <a href="{{ path('pizza_edit', {'id': pizza.id}) }}" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
                {{ 'action.edit'|trans }}
            </a>
            <a href="{{ path('pizza_index') }}" class="text-blue-500 hover:underline ml-4">
                {{ 'action.back_to_list'|trans }}
            </a>
        </div>
    </div>
{% endblock %}