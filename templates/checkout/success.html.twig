{% extends 'base.html.twig' %}

{% block title %}Checkout Successful{% endblock %}

{% block body %}
    <h1>Thank You!</h1>

    <p>Your order has been placed successfully.</p>

    <h2>Order Details</h2>

    <div class="order-info">
        <p><strong>Order ID:</strong> {{ order.id }}</p>
        <p><strong>Name:</strong> {{ order.fullName }}</p>
        <p><strong>Address:</strong> {{ order.address }}</p>
        <p><strong>Phone:</strong> {{ order.phone }}</p>
        {% if order.email %}
            <p><strong>Email:</strong> {{ order.email }}</p>
        {% endif %}
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
        </thead>
        <tbody>
        {% for item in lineItems %}
            <tr>
                <td>{{ item.name }}</td>
                <td>{{ item.quantity }}</td>
                <td>{{ (item.price.unit_amount / 100) | number_format(2, '.', ',') }} {{ currency | upper }}</td>
                <td>{{ (item.amount_total / 100) | number_format(2, '.', ',') }} {{ currency | upper }}</td>
            </tr>
        {% endfor %}
        </tbody>

        <tfoot>
        <tr>
            <td colspan="3"><strong>Total:</strong></td>
            <td><strong>{{ total | number_format(2, '.', ',') }} {{ currency | upper }}</strong></td>
        </tr>
        </tfoot>
    </table>

    <div class="mt-4">
        <a href="{{ path('pizza_index') }}" class="btn btn-primary">Back to Home</a>
    </div>
{% endblock %}