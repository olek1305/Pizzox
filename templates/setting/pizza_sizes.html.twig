{% extends 'base.html.twig' %}

{% block title %}{{ 'settings.pizza_size.title'|trans }}{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8 max-w-4xl">
        <div class="flex justify-center mb-4">
            <div>
                <a href="{{ path('settings_index') }}"
                   class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-700 transition">
                    {{ 'backSettings'|trans }}
                </a>
            </div>
        </div>

        <div class="bg-white shadow-md rounded-lg p-6">
            <h1 class="text-2xl md:text-3xl font-bold mb-6 text-center">{{ 'settings.pizza_size.title'|trans }}</h1>

            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            <div class="mb-4">
                <div class="font-semibold mb-2">{{ form_label(form.pizzaPriceCalculationType) }}</div>
                <div class="flex flex-col sm:flex-row sm:space-x-12">
                    {% for child in form.pizzaPriceCalculationType %}
                        <div class="mb-2 sm:mb-0">
                            {{ form_widget(child) }}
                            {{ form_label(child, null, {'label_attr': {'class': 'ml-2'}}) }}
                        </div>
                    {% endfor %}
                </div>
                {{ form_errors(form.pizzaPriceCalculationType) }}
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <div class="font-semibold mb-2">{{ form_label(form.largeSizeModifier) }}</div>
                    {{ form_widget(form.largeSizeModifier, {
                        'attr': {
                            'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'
                        }
                    }) }}
                    {{ form_errors(form.largeSizeModifier) }}
                </div>

                <div>
                    <div class="font-semibold mb-2">{{ form_label(form.smallSizeModifier) }}</div>
                    {{ form_widget(form.smallSizeModifier, {
                        'attr': {
                            'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'
                        }
                    }) }}
                    {{ form_errors(form.smallSizeModifier) }}
                </div>
            </div>

            <div class="mt-6">
                <button type="submit"
                        class="w-full md:w-auto md:px-8 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-700 transition">
                    {{ 'saves'|trans }}
                </button>
            </div>
            {{ form_end(form) }}
        </div>

        {% for label, messages in app.flashes %}
            {% for message in messages|slice(0, 1) %}
                <div class="mt-4 p-4 rounded-lg {% if label == 'success' %}bg-green-100 text-green-700{% else %}bg-red-100 text-red-700{% endif %}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="mt-4 bg-white p-4 rounded-lg shadow-md">
            <h2 class="text-xl font-bold mb-4 text-center">{{ 'pricing.example.title'|trans }}</h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Fixed model -->
                <div class="border rounded-lg overflow-hidden">
                    <div class="bg-gray-100 p-3">
                        <h3 class="font-bold">{{ 'pricing.example.fixed.title'|trans }}</h3>
                        <p class="text-sm text-gray-600">{{ 'pricing.example.fixed.description'|trans }}</p>
                    </div>

                    <div class="overflow-x-auto">
                        <table class="w-full text-sm">
                            <thead class="bg-gray-50">
                            <tr>
                                <th class="px-4 py-2 text-left">{{ 'pricing.example.pizza'|trans }}</th>
                                <th class="px-4 py-2 text-right">{{ 'pricing.example.base_price'|trans }}</th>
                                <th class="px-4 py-2 text-right">{{ 'pricing.example.large'|trans }}<br>+16 zł</th>
                                <th class="px-4 py-2 text-right">{{ 'pricing.example.small'|trans }}<br>-16 zł</th>
                            </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                            <tr>
                                <td class="px-4 py-2">Margherita</td>
                                <td class="px-4 py-2 text-right">40 zł</td>
                                <td class="px-4 py-2 text-right">56 zł</td>
                                <td class="px-4 py-2 text-right">24 zł</td>
                            </tr>
                            <tr>
                                <td class="px-4 py-2">Pepperoni</td>
                                <td class="px-4 py-2 text-right">45 zł</td>
                                <td class="px-4 py-2 text-right">61 zł</td>
                                <td class="px-4 py-2 text-right">29 zł</td>
                            </tr>
                            <tr>
                                <td class="px-4 py-2">Hawajska</td>
                                <td class="px-4 py-2 text-right">42 zł</td>
                                <td class="px-4 py-2 text-right">58 zł</td>
                                <td class="px-4 py-2 text-right">26 zł</td>
                            </tr>
                            <tr class="bg-yellow-100">
                                <td class="px-4 py-2 font-medium">{{ 'pricing.example.average'|trans }}</td>
                                <td class="px-4 py-2 text-right font-medium">42.33 zł</td>
                                <td class="px-4 py-2 text-right font-medium">58.33 zł</td>
                                <td class="px-4 py-2 text-right font-medium">26.33 zł</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Percent model -->
                <div class="border rounded-lg overflow-hidden">
                    <div class="bg-gray-100 p-3">
                        <h3 class="font-bold">{{ 'pricing.example.percent.title'|trans }}</h3>
                        <p class="text-sm text-gray-600">{{ 'pricing.example.percent.description'|trans }}</p>
                    </div>

                    <div class="overflow-x-auto">
                        <table class="w-full text-sm">
                            <thead class="bg-gray-50">
                            <tr>
                                <th class="px-4 py-2 text-left">{{ 'pricing.example.pizza'|trans }}</th>
                                <th class="px-4 py-2 text-right">{{ 'pricing.example.base_price'|trans }}</th>
                                <th class="px-4 py-2 text-right">{{ 'pricing.example.large'|trans }}<br>+30%</th>
                                <th class="px-4 py-2 text-right">{{ 'pricing.example.small'|trans }}<br>-25%</th>
                            </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                            <tr>
                                <td class="px-4 py-2">Margherita</td>
                                <td class="px-4 py-2 text-right">40 zł</td>
                                <td class="px-4 py-2 text-right">52 zł</td>
                                <td class="px-4 py-2 text-right">30 zł</td>
                            </tr>
                            <tr>
                                <td class="px-4 py-2">Pepperoni</td>
                                <td class="px-4 py-2 text-right">45 zł</td>
                                <td class="px-4 py-2 text-right">58.50 zł</td>
                                <td class="px-4 py-2 text-right">33.75 zł</td>
                            </tr>
                            <tr>
                                <td class="px-4 py-2">Hawajska</td>
                                <td class="px-4 py-2 text-right">42 zł</td>
                                <td class="px-4 py-2 text-right">54.60 zł</td>
                                <td class="px-4 py-2 text-right">31.50 zł</td>
                            </tr>
                            <tr class="bg-yellow-100">
                                <td class="px-4 py-2 font-medium">{{ 'pricing.example.average'|trans }}</td>
                                <td class="px-4 py-2 text-right font-medium">42.33 zł</td>
                                <td class="px-4 py-2 text-right font-medium">55.03 zł</td>
                                <td class="px-4 py-2 text-right font-medium">31.75 zł</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Comparison for 40 zł -->
            <div class="mt-6 bg-blue-50 p-4 rounded-lg">
                <h3 class="text-lg font-semibold mb-2">{{ 'pricing.example.comparison.title'|trans }}</h3>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="bg-white p-3 rounded shadow-sm">
                        <h4 class="font-medium text-blue-700">{{ 'pricing.example.comparison.fixed_model'|trans }}</h4>
                        <ul class="list-disc pl-5 mt-2 space-y-1">
                            <li>{{ 'pricing.example.comparison.large_pizza'|trans }} 40 zł + 16 zł = 56 zł</li>
                            <li>{{ 'pricing.example.comparison.small_pizza'|trans }} 40 zł - 16 zł = 24 zł</li>
                            <li class="font-semibold">{{ 'pricing.example.comparison.difference'|trans }} 32 zł</li>
                        </ul>
                    </div>

                    <div class="bg-white p-3 rounded shadow-sm">
                        <h4 class="font-medium text-blue-700">{{ 'pricing.example.comparison.percent_model'|trans }}</h4>
                        <ul class="list-disc pl-5 mt-2 space-y-1">
                            <li>{{ 'pricing.example.comparison.large_pizza'|trans }} 40 zł + 30% = 52 zł</li>
                            <li>{{ 'pricing.example.comparison.small_pizza'|trans }} 40 zł - 25% = 30 zł</li>
                            <li class="font-semibold">{{ 'pricing.example.comparison.difference'|trans }} 22 zł</li>
                        </ul>
                    </div>
                </div>

                <div class="mt-4 p-3 bg-gray-50 rounded border border-gray-200">
                    <p class="text-gray-700">{{ 'pricing.example.comparison.explanation_fixed'|trans }}</p>
                    <p class="text-gray-700">{{ 'pricing.example.comparison.explanation_percent'|trans }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}