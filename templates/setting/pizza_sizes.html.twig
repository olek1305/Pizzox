{% extends 'base.html.twig' %}

{% block title %}{{ 'settings.pizza_size.title'|trans }}{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8 max-w-4xl">
        <div class="flex justify-center mb-4">
            <div>
                <a href="{{ path('settings_index') }}"
                   class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-700 transition">
                    {{ 'backSettings'|trans }}
                </a>
            </div>
        </div>

        <div class="bg-white shadow-md rounded-lg p-6">
            <h1 class="text-2xl md:text-3xl font-bold mb-6 text-center">{{ 'settings.pizza_size.title'|trans }}</h1>

            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            <div class="mb-4">
                <div class="font-semibold mb-2">{{ form_label(form.pizzaPriceCalculationType) }}</div>
                <div class="flex flex-col sm:flex-row sm:space-x-12">
                    {% for child in form.pizzaPriceCalculationType %}
                        <div class="mb-2 sm:mb-0">
                            {{ form_widget(child) }}
                            {{ form_label(child, null, {'label_attr': {'class': 'ml-2'}}) }}
                        </div>
                    {% endfor %}
                </div>
                {{ form_errors(form.pizzaPriceCalculationType) }}
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <div class="font-semibold mb-2">{{ form_label(form.largeSizeModifier) }}</div>
                    {{ form_widget(form.largeSizeModifier, {
                        'attr': {
                            'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'
                        }
                    }) }}
                    {{ form_errors(form.largeSizeModifier) }}
                </div>

                <div>
                    <div class="font-semibold mb-2">{{ form_label(form.smallSizeModifier) }}</div>
                    {{ form_widget(form.smallSizeModifier, {
                        'attr': {
                            'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'
                        }
                    }) }}
                    {{ form_errors(form.smallSizeModifier) }}
                </div>
            </div>

            <div class="mt-6">
                <button type="submit"
                        class="w-full md:w-auto md:px-8 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-700 transition">
                    {{ 'saves'|trans }}
                </button>
            </div>
            {{ form_end(form) }}
        </div>

        {% for label, messages in app.flashes %}
            {% for message in messages|slice(0, 1) %}
                <div class="mt-4 p-4 rounded-lg {% if label == 'success' %}bg-green-100 text-green-700{% else %}bg-red-100 text-red-700{% endif %}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %}