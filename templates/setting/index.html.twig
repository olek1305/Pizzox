{% extends 'base.html.twig' %}

{% block title %}Settings{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6">Settings</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="p-6">
                    <h5 class="text-xl font-semibold mb-2">Currency Settings</h5>
                    <p class="text-gray-600 mb-4">Configure currency and country settings for your application.</p>
                    <a href="{{ path('currency_setting') }}"
                       class="block w-full py-2 px-4 bg-gray-100 text-gray-800 rounded hover:bg-gray-200 transition-colors text-center">
                        Currency Setting
                    </a>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="p-6">
                    <h5 class="text-xl font-semibold mb-2">Stripe Settings</h5>
                    <p class="text-gray-600 mb-4">Configure your Stripe integration settings.</p>
                    <a href="{{ path('stripe_setting') }}"
                       class="block w-full py-2 px-4 bg-gray-100 text-gray-800 rounded hover:bg-gray-200 transition-colors text-center">
                        Stripe Setting
                    </a>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="p-6">
                    <h5 class="text-xl font-semibold mb-2">Pizza Size Settings</h5>
                    <p class="text-gray-600 mb-4">Configure set prices for size.</p>
                    <a href="{{ path('pizza_size_setting') }}"
                       class="block w-full py-2 px-4 bg-gray-100 text-gray-800 rounded hover:bg-gray-200 transition-colors text-center">
                        Pizza Size Setting
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}